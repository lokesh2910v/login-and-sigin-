<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/styles.css">
    <script>
        async function handleSendOtp(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/send-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                const result = await response.json();
                if (!response.ok) {
                    throw new Error(result.message);
                }

                alert(result.message); // Alert on successful OTP send

                // Automatically set the Gmail ID in the Verify OTP block
                document.getElementById('verifyGmail').value = data.gmail;
                
            } catch (error) {
                alert(error.message); // Alert on errors
            }
        }
        
        async function handleVerifyOtp(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch('/verify-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });
                
                const result = await response.json();
                if (!response.ok) {
                    throw new Error(result.message);
                }
                
                alert(result.message); // Alert on successful account creation
                window.location.href = '/'; // Redirect to login page   

            } catch (error) {
                alert(error.message); // Alert on errors
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <h2>Create Account</h2>
        <form onsubmit="handleSendOtp(event)">
            <label for="sendGmail">Gmail ID:</label>
            <input id="sendGmail" name="gmail" type="email" required>
            <button type="submit">Send OTP</button>
        </form>

        <form onsubmit="handleVerifyOtp(event)">
            <input type="hidden" id="verifyGmail" name="gmail" required> <!-- Ensure Gmail is here -->
            <label for="otp">Enter OTP:</label>
            <input type="text" id="otp" name="otp" required>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
            <button type="submit">Verify OTP and Create Account</button>
        </form>

        <form action="/auth/google" method="GET">
            <button type="submit">Sign Up with Google</button>
        </form>
        <a href="/">Already have an account? Login</a>
    </div>
</body>
</html>
